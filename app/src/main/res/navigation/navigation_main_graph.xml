<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.omarket.ui.login.LoginFragment"
        android:label="@string/loginFragment"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainActivity"
            app:destination="@id/mainActivity" />

    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.omarket.ui.login.RegisterFragment"
        android:label="@string/loginFragment"
        tools:layout="@layout/fragment_register" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.omarket.ui.main_fragments.MainActivity"
        android:label="MainActivity" />


</navigation>